{
  "theme": "starter",
  "basePaths": {
    "src": "src",
    "dest": ""
  },
  "paths": {
    "images": {
      "src": "src/image/",
      "dest": "image/",
      "sprites": {
        "src": "src/image/sprites/",
        "dest": "image/",
        "svg": {
          "src": "src/image/sprites/svg/",
          "output": "Website-Block-Xhtmltemplate-Svgsprite.all.all.html",
          "dest": "modules/website/templates/"
        }
      }
    },
    "scripts": {
      "src": "src/js/",
      "dest": "js/"
    },
    "styles": {
      "src": "src/style/",
      "srcIncludePaths": ["src/style/", "src/style/vendor-override/some_dependency_override", "src/vendor/some_dependency"],
      "dest": "style/"
    },
    "iconfont": {
      "src": "src/iconfont/",
      "dest": "image/",
      "templateSrc": "src/iconfont/template/_iconfont.scss",
      "templateDest": "src/style/"
    },
    "fonts": {
      "src": "src/font/",
      "dest": "image/"
    }
  },
  "clean": {
    "style": {
      "ignore": ["!style/layout.css", "!style/layout.xul.all.css", "!style/skin-variables.css", "!style/skin.css", "!style/print.css"]
    },
    "script": {
      "ignore": []
    },
    "media": {
      "ignore": []
    }
  },
  "plugins": {
    "autoprefixer": {
      "browsers": ["last 2 version", "ios 8", "ie 10", "ie 11"]
    },
    "imagemin": {
      "formats": "*.{png,PNG,jpg,JPG,jpeg,JPEG,gif,GIF}"
    },
    "iconfont": {
      "fontName": "iconfont",
      "centerHorizontally": true,
      "normalize": true,
      "fontHeight": 1001,
      "formats": ["svg", "ttf", "eot", "woff", "woff2"],
      "prependUnicode": true,
      "timestamp": "runTimestamp"      
    },
    "consolidate": {
      "lodash": {
        "fontName": "iconfont",
        "fontPath": "/media/themes/#{$theme}/",
        "className": "iconfont"
      }
    },
    "spritesmith": {
      "cssName": "_sprite-",
      "cssFormat": "scss",
      "classPrefix": "sprite-",
      "imgName": "sprite-",
      "imgPath": "/media/themes/#{$theme}/"
    }
  }, 
  "css": {
    "vendor": []
  },
  "js": {
    "vendor": [
      "src/vendor/browser-detection/src/browser-detection.js"
    ]
  }
}
